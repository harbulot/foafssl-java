<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.java.dev.sommer</groupId>
	<artifactId>foafssl</artifactId>
	<packaging>pom</packaging>
	<version>0.4</version>
	<name>FOAF+SSL</name>
	<url>http://sommer.dev.java.net/</url>

	<properties>
		<foafssl.version>0.4</foafssl.version>
		<sesame.version>2.2.4</sesame.version>
	</properties>

	<licenses>
		<license>
			<name>BSD</name>
			<url>LICENCE.txt</url>
		</license>
	</licenses>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
		<!--
			<extensions> <extension> <groupId>org.jvnet.wagon-svn</groupId>
			<artifactId>wagon-svn</artifactId> </extension> </extensions>
		-->
	</build>

	<repositories>
		<repository>
			<id>aduna-repo</id>
			<name>Aduna Repository</name>
			<url>http://repo.aduna-software.org/maven2/releases</url>
		</repository>
		<repository>
			<id>maven-restlet</id>
			<name>Public online Restlet repository</name>
			<url>http://maven.restlet.org</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>maven2-repository.dev.java.net</id>
			<name>Java.net Repository for Maven</name>
			<url>http://download.java.net/maven/2/</url>
		</repository>
		<repository>
			<id>rootdev.net</id>
			<name>rootdev.net repository</name>
			<url>http://rootdev.net/maven/snapshot-repo/</url>
		</repository>
	</repositories>

	<modules>
		<module>foafssl-verifier</module>
		<module>foafssl-identity-provider</module>
		<module>foafssl-identity-provider-webapp</module>
		<module>foafssl-filter</module>
	</modules>

	<dependencyManagement>
